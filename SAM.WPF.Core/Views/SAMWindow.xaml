<mah:MetroWindow x:Class="SAM.WPF.Core.Views.SAMWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:services="clr-namespace:SAM.WPF.Core.Services"
                 mc:Ignorable="d"
                 Width="{Binding Width}" Height="{Binding Height}"
                 WindowState="{Binding WindowState}" Title="{Binding Title}"
                 Style="{StaticResource ChromeMetroWindowStyle}"
                 WindowTitleBrush="#181818" NonActiveWindowTitleBrush="#181818"
                 TitleBarHeight="38"
                 services:WindowSettings.Save="True">

    <mah:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SAM.WPF.Core;component/Styles/AllResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </mah:MetroWindow.Resources>

</mah:MetroWindow>
