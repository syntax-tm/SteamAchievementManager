<views:SAMWindow x:Class="SAM.WPF.Manager.MainWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:local="clr-namespace:SAM.WPF.Manager"
                xmlns:views="clr-namespace:SAM.WPF.Core.Views;assembly=SAM.WPF.Core"
                xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                xmlns:vm="clr-namespace:SAM.WPF.Manager.ViewModels"
                mc:Ignorable="d"
                d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <views:SteamGameView DataContext="{Binding GameVm}" />
    </Grid>
</views:SAMWindow>
