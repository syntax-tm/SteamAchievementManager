<mah:MetroWindow x:Class="SAM.WPF.Manager.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:SAM.WPF.Manager"
                 xmlns:views="clr-namespace:SAM.WPF.Core.Views;assembly=SAM.WPF.Core"
                 xmlns:vm="clr-namespace:SAM.WPF.Manager.ViewModels"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                 xmlns:behaviors="clr-namespace:SAM.WPF.Core.Behaviors;assembly=SAM.WPF.Core"
                 mc:Ignorable="d"
                 d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel, IsDesignTimeCreatable=False}"
                 Title="{Binding Title, Mode=OneWay}"
                 Style="{StaticResource ChromeMetroWindowStyle}">

    <dxmvvm:Interaction.Behaviors>
        <behaviors:RibbonWindowBehavior />
        <behaviors:WindowAutoSaveBehavior Config="{Binding Config}" />
    </dxmvvm:Interaction.Behaviors>

    <Grid>
        <views:SteamGameView DataContext="{Binding GameVm}" />
    </Grid>
</mah:MetroWindow>
